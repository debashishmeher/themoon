                        li 
                            span.material-symbols-outlined.tick-icon wifi
                            span  Free Wifi
                        li 
                            span.material-symbols-outlined.tick-icon lunch_dining
                            span  Breakfast
                        li 
                            span.material-symbols-outlined.tick-icon dry_cleaning
                            span  Towel
                        li 
                            span.material-symbols-outlined.tick-icon tv
                            span  Flat T.V
                        li 
                            span.material-symbols-outlined.tick-icon tv
                            span  Geyser
                        
                        li 
                            span.material-symbols-outlined.tick-icon security
                            span  24/7 security
                        
                        li 
                            span.material-symbols-outlined.tick-icon bolt
                            span  power backup

